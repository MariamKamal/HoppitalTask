@model HoppitalTask.Models.Appointment

@{
    ViewData["Title"] = "Appointment";
}

<h1>Appointment</h1>


<div class="col-md-10 mx-auto py-4">
    <div class="card">
        <div class="card-header bg-primary text-uppercase text-white">
            <h4>Make An Appoinment </h4>
        </div>
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="Appointment">
                <dl class="row">
                    <dt class="col-sm-2">
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="DocId" hidden />
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="Date" />
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Clinic)
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="Clinic" />
                    </dd>
                    <dt class="col-sm-2">
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="PatientId" hidden />
                    </dd>
                    <dt class="col-sm-2">
                        <label>Doctor name </label>
                    </dt>
                    <dd class="col-sm-10">
                        <input value=@ViewData["docName"] readonly />

                    </dd>


                    <dt class="col-sm-2">
                        <label>D/Specialization </label>
                    </dt>
                    <dd class="col-sm-10">
                        <input value=@ViewData["specialization"] readonly />
                    </dd>
                    <dt class="col-sm-2">
                        <label>Patient Name  </label>
                    </dt>
                    <dd class="col-sm-10">
                        <input value=@ViewData["patientName"] readonly />
                    </dd>

                </dl>
                <div class="form-group">
                    <input type="submit" value="Make The Appoinmanet" class="btn btn-sm btn-primary rounded-0 text-uppercase" />

                </div>
            </form>
        </div>
    </div>
    <a asp-action="PatiientHome" asp-route-Id="@Model.PatientId"></a>
</div>
      
