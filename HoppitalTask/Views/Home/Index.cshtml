@{
    ViewData["Title"] = "Home Page";
}




    <div  class="border border-primary p-3 m-2 bg-light" style="background-color: rgba(0,0,0,.03);position:absolute;
        left: 30%;
        right: 50%;
        top: 30%;
        height: 300px;
        width: 550px">
        
        @using (Html.BeginForm("index", "Login"))
        {

            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control-plaintext col-form-label" placeholder="email@example.com">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword" placeholder="Password">
                </div>
            </div>

            <input type="submit" value="Login" class="btn btn-outline-primary align-self-md-center" />
            

        }



        <br />
        <a asp-controller="Login" asp-action="RegisterDoctor" class=".btn-link btn ">Register As Doctor  </a>
        <br />
        <a asp-controller="Login" asp-action="RegisterPatient" class=".btn-link btn">Register As Patient </a>


    </div>